<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CalcularPies" parent="android:Theme.Holo.NoActionBar.Fullscreen"></style>

    <style name="titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texto_titulo</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="boton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/ancho_min_boton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/alto_min_boton</item>
        <item name="android:layout_margin">@dimen/margen_boton</item>
        <item name="android:textSize">@dimen/texto_boton</item>
    </style>

    <style name="labelMedida">
        <item name="android:textSize">@dimen/label_medida</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="texto">
        <item name="android:layout_width">@dimen/largo_texto</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="labelTotalPies">
        <item name="android:layout_width">@dimen/largo_texto</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/label_medida</item>
    </style>

    <style name="labelResultado">
        <item name="android:layout_width">@dimen/largo_texto</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/naranja</item>
        <item name="android:textSize">@dimen/label_resultado</item>
    </style>

</resources>